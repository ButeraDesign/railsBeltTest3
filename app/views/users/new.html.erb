<div class = "container">
<div class = "row">

<div class="col-md-6 well">
<h1>Join</h1>
<% if flash[:errorsUser] %>
	<% flash[:errorsUser].each do |e| %>
		<p><%= e %></p>
	<% end %>
<% end %>
<form class="table well" action='/users/' method='post'>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  Email:<input type='text' name='user[email]'  /><br>
  First Name:<input type='text' name='user[first_name]'  /><br>
  Last Name:<input type='text' name='user[last_name]'  /><br>
  Password:<input type='text' name='user[password]'  /><br>
  Password Confirmation:<input type='text' name='user[password_confirmation]'  /><br>

  <input type='submit' value='Join' />
</form>
</div>

<div class="col-md-6  well">

<h1>Login Screen</h1>
<% if flash[:errorsLogin] %>
	<% flash[:errorsLogin].each do |e| %>
		<p><%= e %></p>
	<% end %>
<% end %>
<form class="table well" action='/sessions/' method='post'>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  Email:<input type='text' name='email'  /><br>
  Password:<input type='text' name='password'  /><br>

  <input type='submit' value='Login' />
</form>

</div>

</div>
</div>
